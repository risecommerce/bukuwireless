                    <var name="default">
                        <var name="slidesToShow">4</var>
                    </var>
                </var>
            </var>
        </var>  
<var name="tablet">
                <var name="conditions">
                    <var name="max-width">1024px</var>
                    <var name="min-width">768px</var>
                </var>
                <var name="options">
                    <var name="products">
                        <var name="default">
                            <var name="slidesToShow">3</var>
                        </var>
                        <var name="continuous">
                            <var name="slidesToShow">2</var>
                        </var>
                    </var>
                </var>
            </var>		
    </var>
