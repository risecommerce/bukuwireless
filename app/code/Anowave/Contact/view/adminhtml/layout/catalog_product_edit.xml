<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
	    <referenceBlock name="product_tabs">
            <block class="Anowave\Contact\Block\Adminhtml\Tab" name="enquiry">
                <arguments>
                    <argument name="label" xsi:type="string" translate="true">Enquiry Form</argument>
                    <argument name="class" xsi:type="string">ajax</argument>
                    <argument name="group_code" xsi:type="string">basic</argument>
                </arguments>
            </block>
            <action method="addTab">
                <argument name="name" xsi:type="string">enquiry</argument>
                <argument name="block" xsi:type="string">enquiry</argument>
            </action>
        </referenceBlock>
    </body>
</page>
